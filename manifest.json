{
  "manifest_version": 3,
  "name": "Tab Memory Tracker",
  "version": "1.0",
  "description": "Track memory usage for each open tab in Chrome.",
  "permissions": ["tabs", "system.memory", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
